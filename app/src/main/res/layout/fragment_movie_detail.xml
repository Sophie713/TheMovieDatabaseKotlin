<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".fragments.FragmentMovieDetail">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fragment_movie_detail_poster"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/unnamed" />


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Text"
            android:id="@+id/fragment_movie_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Text"
            android:id="@+id/fragment_movie_detail_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Text"
            android:id="@+id/fragment_movie_detail_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Text"
            android:id="@+id/fragment_movie_detail_originLang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Text"
            android:id="@+id/fragment_movie_detail_released"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</ScrollView>