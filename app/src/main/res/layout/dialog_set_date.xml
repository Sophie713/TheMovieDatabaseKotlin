<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dp16"
    android:padding="@dimen/dp16"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_set_date_title1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select dates to filter movie results. Choose a start date, end date or up to 14 days range.\n\nStart on:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_set_date_day1"
        style="@style/DialogText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/day"
        app:layout_constraintEnd_toStartOf="@id/dialog_set_date_month1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_set_date_title1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_set_date_month1"
        style="@style/DialogText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/month"
        app:layout_constraintEnd_toStartOf="@id/dialog_set_date_year1"
        app:layout_constraintStart_toEndOf="@id/dialog_set_date_day1"
        app:layout_constraintTop_toTopOf="@id/dialog_set_date_day1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_set_date_year1"
        style="@style/DialogText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/year"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialog_set_date_month1"
        app:layout_constraintTop_toTopOf="@id/dialog_set_date_day1" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/dialog_set_date_start_day"
        android:layout_width="0dp"
        style="@style/DialogEditText"
        android:maxLength="2"
        android:imeOptions="actionNext"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/dialog_set_date_day1"
        app:layout_constraintStart_toStartOf="@id/dialog_set_date_day1"
        app:layout_constraintTop_toBottomOf="@id/dialog_set_date_day1" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/dialog_set_date_start_month"
        android:layout_width="0dp"
        style="@style/DialogEditText"
        android:maxLength="2"
        android:imeOptions="actionNext"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/dialog_set_date_month1"
        app:layout_constraintStart_toStartOf="@id/dialog_set_date_month1"
        app:layout_constraintTop_toTopOf="@id/dialog_set_date_start_day" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/dialog_set_date_start_year"
        android:layout_width="0dp"
        style="@style/DialogEditText"
        android:maxLength="4"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/dialog_set_date_year1"
        app:layout_constraintStart_toStartOf="@id/dialog_set_date_year1"
        app:layout_constraintTop_toTopOf="@id/dialog_set_date_start_day" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_set_date_title2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="End on:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_set_date_start_day" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_set_date_day2"
        style="@style/DialogText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/day"
        app:layout_constraintEnd_toStartOf="@id/dialog_set_date_month2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_set_date_title2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_set_date_month2"
        style="@style/DialogText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/month"
        app:layout_constraintEnd_toStartOf="@id/dialog_set_date_year2"
        app:layout_constraintStart_toEndOf="@id/dialog_set_date_day2"
        app:layout_constraintTop_toTopOf="@id/dialog_set_date_day2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_set_date_year2"
        style="@style/DialogText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/year"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialog_set_date_month2"
        app:layout_constraintTop_toTopOf="@id/dialog_set_date_day2" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/dialog_set_date_end_day"
        android:layout_width="0dp"
        style="@style/DialogEditText"
        android:maxLength="2"
        android:imeOptions="actionNext"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/dialog_set_date_day2"
        app:layout_constraintStart_toStartOf="@id/dialog_set_date_day2"
        app:layout_constraintTop_toBottomOf="@id/dialog_set_date_day2" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/dialog_set_date_end_month"
        android:layout_width="0dp"
        android:imeOptions="actionNext"
        style="@style/DialogEditText"
        android:maxLength="2"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/dialog_set_date_month2"
        app:layout_constraintStart_toStartOf="@id/dialog_set_date_month2"
        app:layout_constraintTop_toTopOf="@id/dialog_set_date_end_day" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/dialog_set_date_end_year"
        android:layout_width="0dp"
        style="@style/DialogEditText"
        android:maxLength="4"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/dialog_set_date_year2"
        app:layout_constraintStart_toStartOf="@id/dialog_set_date_year2"
        app:layout_constraintTop_toTopOf="@id/dialog_set_date_end_day" />

    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintTop_toBottomOf="@id/dialog_set_date_end_day"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/dialog_set_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set" />

</androidx.constraintlayout.widget.ConstraintLayout>